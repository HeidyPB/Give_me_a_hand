<h1>all friends</h1>
<br>
<h4><%= link_to "Become a Friend today!", friends_new_path %></h4>
<br>

<div class = "cards">
  <% @friends.each do |friend| %>
    <div class="card-product">
      <% if friend.photo.attached? %>
        <%= cl_image_tag friend.photo.key, crop: :fill %>
      <%else%>
        <%= image_tag('givemeahand.jpg')%>
      <%end%>
      <div class="card-product-infos">
        <li><%= friend.username %></li>
        <li><%= friend.origin %></li>
        <li><%= friend.province %></li>
        <%= link_to "See my profile", friend_path(friend) %>
      </div>
    </div>
  <% end %>
</div>
