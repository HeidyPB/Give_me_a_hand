<div class="container_meeting_new">
  <h6 id= title_book>Book a meeting with <%=friend.firstname %> <%=friend.lastname%></h5>
  <p>Choose a time slot that suits your schedule</p>
  <div class= form_create_meeting>
    <%= simple_form_for([friend, meeting], url: friend_meetings_path(friend.id)) do |f| %>
      <%= f.input :date, placeholder: 'Date', label:false, as: :string,
                      wrapper_html: { class: "mb-4" },
                      label_html: { class: "form-label text-secondary fw-bold" },
                      input_html: { data: { controller: "flatpickr" } } %>
      <%= f.input :title, prompt: 'Select a titleâ€¦', label:false, as: :select, collection: @friend_categories, include_blank: false %>
      <%= f.input :description, placeholder: 'Description', label:false %>
      <div id= "boton_meeting">
        <%= f.submit class: "btn btn_custom_dark"%>
      </div>
    <% end %>
  </div>
</div>
